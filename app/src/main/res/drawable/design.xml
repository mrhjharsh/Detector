<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom Gradient Layer -->
    <item>
        <shape>
            <gradient
                android:startColor="#194002"
                android:endColor="#03348F"
                android:type="linear"
                android:angle="45"/>
        </shape>
    </item>
    <!-- Top Gradient Layer -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape>
            <gradient
                android:startColor="#774D0F"
                android:endColor="#AE0942"
                android:type="linear"
                android:angle="135"/>
        </shape>
    </item>
</layer-list>
